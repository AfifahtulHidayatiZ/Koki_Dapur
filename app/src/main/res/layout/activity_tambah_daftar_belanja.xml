    <TextView
        android:text="TAMBAH DAFTAR BELANJA"
        android:textSize="16dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/green_001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:weightSum="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/background_add_bahan">
        <TextView
            android:text="Nama Bahan"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/green_001"
            android:typeface="serif"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/InputNamaBelanja"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:inputType="textCapSentences"
                android:hint="Minyak Goreng"
                android:typeface="serif"/>


        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:text="Jumlah"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/green_001"
            android:typeface="serif"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/InputJumlahBelanja"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:inputType="textCapSentences"
                android:hint="2Kg"
                android:typeface="serif"/>


        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/Btn_Simpan_Belanja"
            android:text="Simpan"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            android:typeface="serif"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/background_button"
            android:layout_marginTop="20dp"
            android:layout_width="340dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>