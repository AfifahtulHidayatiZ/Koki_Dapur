<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TambahResepActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

<!--        <com.google.android.material.appbar.AppBarLayout-->
<!--            android:id="@+id/AppBarTambahBahan"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content">-->

<!--            <androidx.appcompat.widget.Toolbar-->
<!--                android:id="@+id/toolbarTambahBahan"-->
<!--                android:background="@color/green_001"-->
<!--                style="@style/Foxandroid.Toolbar"-->
<!--                app:navigationIcon="@drawable/back"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="55dp"/>-->
<!--        </com.google.android.material.appbar.AppBarLayout>-->

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/InputLayoutNamaResep"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:layout_width="340dp"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/InputNamaResep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:hint="Nama Resep"
                android:inputType="textCapWords"
                android:textAlignment="center"
                android:typeface="serif"/>

        </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:text="Bahan-Bahan"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/green_001"
                android:typeface="serif"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/InputLayoutNamaBahanBahan"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/InputNamaBahanBahan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:inputType="textCapSentences|textMultiLine"
                android:hint="Bahan yang Diperlukan"
                android:typeface="serif"/>

        </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:text="Cara Membuat"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/green_001"
                android:typeface="serif"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/InputLayoutCaraMembuat"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/InputCaraMembuat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:inputType="textCapSentences|textMultiLine"
                android:singleLine="true"
                android:hint="Cara Membuat"
                android:typeface="serif"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/Btn_Simpan_Resep"
            android:text="Simpan"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            android:typeface="serif"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/background_button"
            android:layout_marginTop="20dp"
            android:layout_width="340dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>